	    window.location = "http://m.karrykart.com/"; 
	   // window.location = "http://hg.karrykart.com/";
	}
	}
	
	redirect();
</script>
<div class="row">
    <div class="col-md-12">
        @if(User.IsInRole("Administrator")){
         @Html.Partial("_PartialAdminCards")
