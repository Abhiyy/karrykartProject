
<style>
    .dashBoardCard {
    padding:10px !important;
    text-align:center;
    margin:2px;
    border-radius:5px;
    box-shadow:#f2f2f2 2px 2px;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <h3> Important Numbers</h3>
        <hr />
        @foreach (var card in @ViewBag.AdminCards)
        {
            
        <div class="col-md-3 ">
            
            <div class="card text-white bg-info mb-3 dashBoardCard">
  
  <div class="card-body ">
    
    <h4 class="card-title text-uppercase">@card.Name</h4>
    <h2>@card.CardCount </h2>
    
  </div>
</div>
        </div>
        }
    </div>
</div>
