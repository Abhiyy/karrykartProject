@using System.Collections.Generic
@{
    
    var slider = (List<AppBanwao.KarryKart.Model.Slider>) ViewBag.Slider;
}
<style>
    .carousel-caption {
    color:#173753 !important;
}
</style>
@if(slider!=null)
{
if(slider.Count >0)
{
    <div class="row" id="categoryMenu">
    <div class="col-sm-12">
        <div class="panel productCategories verticalHeadingPanel panel-default">
            <div class="panel-heading bluegreenGradient text-center">
                <h5 class="text-uppercase vertical text-center">Offer Zone</h5>
            </div>
            <div class="panel-body">
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
@for (int i = 0; i < slider.Count;i++ )
{ 
    if(i==0)
    { 
        <li data-target="#myCarousel" data-slide-to="@i" class="active"></li>
    }
    else
    {
    <li data-target="#myCarousel" data-slide-to="@i"></li>
}
}     
      
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">

        @foreach(var slide in slider)
        { 
       if(slide.SlideOrder==1)
       { 
             <div class="item active">
                 <img src="@Url.Content(slide.ImageLink)" class="img-responsive" alt="Chania">
            <div class="carousel-caption">
               <h2>@slide.OfferHeading</h2>
                <h4>@slide.Offer</h4>
            </div>
        </div>
       }
       else { 
        <div class="item">
            <img src="@Url.Content(slide.ImageLink)" class="img-responsive" alt="Chania">
            <div class="carousel-caption">
                  <h2>@slide.OfferHeading</h2>
                <h4>@slide.Offer</h4>
            </div>
        </div>
        }
       
        }

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" style="background-image:none" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" style="color:#0094ff" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" style="background-image:none" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" style="color:#0094ff" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
                </div>
            </div>
        </div>
        </div>
}
}
